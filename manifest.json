{
  "manifest_version": 3,
  "name": "YouTube Vocal Extractor",
  "version": "1.0.0",
  "description": "Export YouTube videos and extract vocals from the audio",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "https://*.googlevideo.com/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*",
    "https://youtube-vocal-extractor.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Vocal Extractor"
  },
  "web_accessible_resources": [
    {
      "resources": ["audio-processor.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
